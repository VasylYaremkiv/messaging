= link_to 'Create User', new_admin_user_path

%table.table.table-bordered
  %thead
    %tr
      %th Username
      %th Name
      %th Status
      %th Action

  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.name
        %td= user.active? ? ' Active' : 'Inactive'
        %td
          = link_to 'Edit', edit_admin_user_path(user)
          = button_to 'Delete', admin_user_path(user),  method: :delete
          = button_to 'Reset Password', reset_password_admin_user_path(user)